{% extends 'base.html.twig' %}

{% block title %}Movie list{% endblock %}

{% block body %}

<div class="bg-blue-500">
    <h1>{{ app_name }} - {{ global_author }}</h1>

    <h2>Movie list</h2>
    <ul>
        {% for movie in list_movie %}
        <li>
            <a href="{{ path('movie_show', { id: movie.id }) }}">{{ movie.title }}</a>
        </li>
        {% endfor %}
    </ul>
    </div>
{% endblock %}
